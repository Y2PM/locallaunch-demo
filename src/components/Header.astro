---
const baseUrl = import.meta.env.BASE_URL;
const withBase = (target: string) => {
  const normalizedBase = baseUrl.endsWith('/') ? baseUrl : `${baseUrl}/`;
  const normalized = target.startsWith('/') ? target.slice(1) : target;
  return `${normalizedBase}${normalized}`;
};
---
<header class="site-header">
  <a href={withBase('/')} class="brand">LocalLaunch</a>
  <nav class="site-nav" aria-label="Primary">
    <a href={withBase('plumber/')}>Plumber</a>
    <a href={withBase('takeaway/')}>Takeaway</a>
    <a href={withBase('security/')}>Security</a>
  </nav>
  <button id="theme-toggle" type="button" aria-label="Toggle theme">ðŸŒ™</button>
</header>

<script is:inline>
  (() => {
    const root = document.documentElement;
    const button = document.getElementById('theme-toggle');
    if (!button) return;

    const updateButton = (theme) => {
      button.textContent = theme === 'dark' ? 'ðŸŒ™' : 'â˜€ï¸';
      button.setAttribute('aria-label', `Switch to ${theme === 'dark' ? 'light' : 'dark'} mode`);
    };

    const currentTheme = root.getAttribute('data-theme') || 'dark';
    updateButton(currentTheme);

    button.addEventListener('click', () => {
      const active = root.getAttribute('data-theme') || 'dark';
      const next = active === 'dark' ? 'light' : 'dark';
      root.setAttribute('data-theme', next);
      localStorage.setItem('theme', next);
      updateButton(next);
    });
  })();
</script>

<style>
  .site-header {
    width: min(1200px, 92vw);
    margin: 1rem auto 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.85rem;
    flex-wrap: wrap;
  }

  .brand {
    color: var(--text);
    text-decoration: none;
    font-weight: 800;
    font-size: 1.2rem;
  }

  .site-nav {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    margin-left: auto;
  }

  .site-nav a {
    text-decoration: none;
    color: var(--muted);
    font-size: 0.95rem;
    border: 1px solid transparent;
    border-radius: 999px;
    padding: 0.4rem 0.7rem;
  }

  .site-nav a:hover {
    border-color: var(--border);
    color: var(--text);
    background: var(--bg-alt);
  }

  #theme-toggle {
    background: var(--bg-alt);
    border: 1px solid var(--border);
    color: var(--text);
    border-radius: 999px;
    padding: 0.45rem 0.7rem;
    cursor: pointer;
    font-size: 1rem;
  }

  @media (max-width: 680px) {
    .site-nav {
      order: 3;
      width: 100%;
      margin-left: 0;
      justify-content: center;
      padding-bottom: 0.2rem;
    }
  }
</style>
