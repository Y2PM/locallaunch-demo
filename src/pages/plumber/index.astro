---
import BaseLayout from '../../layouts/BaseLayout.astro';

const baseRoot = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
const normalizedThanksPath = `${baseRoot}thanks/`;
---
<BaseLayout title="Leeds Plumber Website Demo | LocalLaunch" description="Demo plumber website for a Leeds plumbing business with services, pricing, and enquiry form." path="/plumber/">
  <section class="section hero plumber-hero">
    <h1>Leeds Emergency Plumber</h1>
    <p class="muted">Fast-response plumbing services across Leeds and nearby postcodes.</p>
    <div class="pill-row">
      <span>24/7 callouts</span>
      <span>Gas safe partners</span>
      <span>60-min response target</span>
    </div>
  </section>

  <section class="section">
    <h2>On-the-job highlights</h2>
    <div class="grid cols-2">
      <article class="gallery-card">
        <img src="https://images.unsplash.com/photo-1585704032915-c3400ca199e7?auto=format&fit=crop&w=1000&q=80" alt="Copper pipes and plumbing joints" loading="lazy" />
        <h3>Pipework repairs</h3>
        <p class="muted">Leak detection and permanent pipe replacement for homes and rentals.</p>
      </article>
      <article class="gallery-card">
        <img src="https://images.unsplash.com/photo-1621955964441-c173e01c135b?auto=format&fit=crop&w=1000&q=80" alt="Plumber holding a spanner and tools" loading="lazy" />
        <h3>Experienced engineers</h3>
        <p class="muted">Qualified plumbers equipped with spanners, pressure kits, and drainage gear.</p>
      </article>
    </div>
  </section>

  <section class="section">
    <h2>Common jobs</h2>
    <ul>
      <li>Boiler pressure checks and minor fixes</li>
      <li>Tap, sink, and toilet repairs</li>
      <li>Burst pipe and leak callouts</li>
      <li>Radiator and heating troubleshooting</li>
    </ul>
  </section>

  <section class="section">
    <h2>Pricing examples</h2>
    <div class="grid cols-3 price-grid">
      <article><h3>Leak repair</h3><p>from £85</p><small>Includes first-hour labour</small></article>
      <article><h3>Toilet fix</h3><p>from £95</p><small>Flush systems, valves and seals</small></article>
      <article><h3>Emergency callout</h3><p>from £120</p><small>Nights, weekends and holidays</small></article>
    </div>
  </section>

  <section class="section">
    <h2>Book a plumber</h2>
    <form method="POST" data-netlify="true" name="plumber-form" action={normalizedThanksPath}>
      <input type="hidden" name="form-name" value="plumber-form" />
      <label for="name">Name
        <input id="name" name="name" type="text" required />
      </label>
      <label for="email">Email
        <input id="email" name="email" type="email" required />
      </label>
      <label for="phone">Phone
        <input id="phone" name="phone" type="tel" required />
      </label>
      <label for="postcode">Postcode
        <input id="postcode" name="postcode" type="text" required />
      </label>
      <label for="message">Message
        <textarea id="message" name="message" rows="5" required></textarea>
      </label>
      <button class="btn" type="submit">Request call back</button>
    </form>
  </section>
</BaseLayout>

<style>
  .plumber-hero {
    background: linear-gradient(135deg, #13283b 0%, #0f1d2e 45%, #1f4965 100%);
    border-color: #2e5678;
  }

  .pill-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
    margin-top: 1rem;
  }

  .pill-row span {
    background: rgba(116, 240, 255, 0.12);
    border: 1px solid rgba(116, 240, 255, 0.35);
    border-radius: 999px;
    padding: 0.3rem 0.8rem;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .gallery-card img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 0.8rem;
  }

  .price-grid article {
    background: linear-gradient(180deg, rgba(116, 240, 255, 0.08), transparent 55%);
    border: 1px solid rgba(116, 240, 255, 0.3);
    border-radius: 12px;
    padding: 1rem;
  }

  .price-grid small {
    color: var(--muted);
  }
</style>
