---
import BaseLayout from '../../layouts/BaseLayout.astro';

const homePath = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
---
<BaseLayout title="Thanks | LocalLaunch" description="Thank you page for LocalLaunch contact submissions." path="/thanks/">
  <section class="section">
    <h1>Thanks for your enquiry</h1>
    <p>We have received your details and will be in touch shortly.</p>
    <a class="btn" href={homePath}>Back to homepage</a>
  </section>
</BaseLayout>
