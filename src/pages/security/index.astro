---
import BaseLayout from '../../layouts/BaseLayout.astro';

const baseRoot = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
const thanksPath = `${baseRoot}thanks/`;
---
<BaseLayout title="SafeHome Alarms Demo | LocalLaunch" description="Demo domestic burglar alarm and CCTV website for SafeHome Alarms." path="/security/">
  <section class="section security-hero">
    <h1>SafeHome Alarms</h1>
    <p class="muted">Domestic burglar alarms, CCTV, and perimeter protection across West Yorkshire.</p>
    <div class="status-strip">
      <span>NSI-style installation standards</span>
      <span>Smartphone monitoring</span>
      <span>Police response ready</span>
    </div>
  </section>

  <section class="section">
    <h2>Security solutions we install</h2>
    <div class="grid cols-3">
      <article class="security-card">
        <img src="https://images.unsplash.com/photo-1558002038-1055907df827?auto=format&fit=crop&w=900&q=80" alt="CCTV camera mounted outdoors" loading="lazy" />
        <h3>CCTV cameras</h3>
        <p class="muted">4K day/night recording with app playback and smart motion alerts.</p>
      </article>
      <article class="security-card">
        <img src="https://images.unsplash.com/photo-1582139329536-e7284fece509?auto=format&fit=crop&w=900&q=80" alt="Home burglar alarm keypad" loading="lazy" />
        <h3>Burglar alarms</h3>
        <p class="muted">Wireless sensors, loud external sirens, and instant mobile notifications.</p>
      </article>
      <article class="security-card">
        <img src="https://images.unsplash.com/photo-1597007066704-67bf2068d5b2?auto=format&fit=crop&w=900&q=80" alt="Barbed wire fence perimeter" loading="lazy" />
        <h3>Perimeter defence</h3>
        <p class="muted">Fence-line checks, anti-climb protection, and gate contact integration.</p>
      </article>
    </div>
  </section>

  <section class="section">
    <h2>Protection packages</h2>
    <div class="grid cols-3 package-grid">
      <article><h3>Essentials</h3><p>Alarm hub + 2 sensors</p><p><strong>£349</strong></p><small>Ideal for flats and terraces</small></article>
      <article><h3>Family</h3><p>Alarm + 4 sensors + outdoor siren</p><p><strong>£599</strong></p><small>Most popular detached-home package</small></article>
      <article><h3>Complete</h3><p>Alarm + CCTV system + app monitoring</p><p><strong>£949</strong></p><small>Full-coverage perimeter + video evidence</small></article>
    </div>
  </section>

  <section class="section">
    <h2>Request a security survey</h2>
    <form method="POST" data-netlify="true" name="security-form" action={thanksPath}>
      <input type="hidden" name="form-name" value="security-form" />
      <label for="name">Name
        <input id="name" name="name" type="text" required />
      </label>
      <label for="email">Email
        <input id="email" name="email" type="email" required />
      </label>
      <label for="phone">Phone
        <input id="phone" name="phone" type="tel" required />
      </label>
      <label for="postcode">Postcode
        <input id="postcode" name="postcode" type="text" required />
      </label>
      <label for="message">Message
        <textarea id="message" name="message" rows="5" required></textarea>
      </label>
      <button class="btn" type="submit">Get quote</button>
    </form>
  </section>
</BaseLayout>

<style>
  .security-card img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 0.8rem;
  }
  .security-hero {
    background: radial-gradient(circle at 20% 15%, #213a63 0%, #0f1728 45%, #0b111e 100%);
    border-color: #35527f;
  }

  .status-strip {
    display: grid;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .status-strip span {
    border: 1px solid rgba(124, 240, 170, 0.35);
    color: #c9fadb;
    background: rgba(124, 240, 170, 0.12);
    border-radius: 9px;
    padding: 0.35rem 0.6rem;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .package-grid article {
    border: 1px solid rgba(124, 240, 170, 0.28);
    border-radius: 12px;
    padding: 1rem;
    background: linear-gradient(180deg, rgba(124, 240, 170, 0.08), transparent 70%);
  }

  .package-grid small {
    color: var(--muted);
  }

</style>
