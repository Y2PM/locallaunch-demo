    <div class="grid cols-3">
      <a class="btn" href={withBase('plumber/')}>Plumber demo</a>
      <a class="btn" href={withBase('takeaway/')}>Takeaway demo</a>
      <a class="btn" href={withBase('security/')}>Security demo</a>
    </div>
  </section>
</BaseLayout>
