---
import BaseLayout from '../../layouts/BaseLayout.astro';

const baseRoot = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
const thanksPath = `${baseRoot}thanks/`;
---
<BaseLayout title="Nonna's Italian Kitchen Demo | LocalLaunch" description="Demo Italian takeaway website with menu highlights, opening hours, and online enquiry form." path="/takeaway/">
  <section class="section">
    <h1>Nonna's Italian Kitchen</h1>
    <p class="muted">Authentic Italian takeaway in Leeds — fresh pasta, pizza, and family recipes.</p>
  </section>

  <section class="section">
    <h2>Popular menu</h2>
    <div class="grid cols-3">
      <article><h3>Margherita Pizza</h3><p>£10.50</p></article>
      <article><h3>Penne Arrabbiata</h3><p>£9.80</p></article>
      <article><h3>Lasagne al Forno</h3><p>£11.20</p></article>
    </div>
  </section>

  <section class="section">
    <h2>Opening hours</h2>
    <p>Mon–Thu: 16:30–22:00</p>
    <p>Fri–Sun: 12:00–22:30</p>
  </section>

  <section class="section">
    <h2>Delivery & collection</h2>
    <p>Delivery within 4 miles of Leeds city centre. Collection ready in 20–30 minutes.</p>
  </section>

  <section class="section">
    <h2>Order enquiry</h2>
    <form method="POST" data-netlify="true" name="takeaway-form" action={thanksPath}>
      <input type="hidden" name="form-name" value="takeaway-form" />
      <label for="name">Name
        <input id="name" name="name" type="text" required />
      </label>
      <label for="email">Email
        <input id="email" name="email" type="email" required />
      </label>
      <label for="phone">Phone
        <input id="phone" name="phone" type="tel" required />
      </label>
      <label for="postcode">Postcode
        <input id="postcode" name="postcode" type="text" required />
      </label>
      <label for="message">Message
        <textarea id="message" name="message" rows="5" required></textarea>
      </label>
      <button class="btn" type="submit">Send order enquiry</button>
    </form>
  </section>
</BaseLayout>
